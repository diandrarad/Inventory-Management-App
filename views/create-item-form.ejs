<!-- create-item-form.html -->
<%- include('header') %>
<div class="flex justify-center">
    <form onsubmit="return validateForm('itemURL')" action="/items" method="POST" enctype="multipart/form-data" class="max-w-lg w-full">
        <div class="grid grid-cols-6 gap-3 mb-7 items-center">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required class="border rounded-lg col-span-3">
            
            <label for="category" class="text-right">Category:</label>
            <select id="category" name="category" required class="border rounded-lg col-span-1">
                <% categories.forEach(category => { %>
                    <option value="<%= category._id %>"><%= category.name %></option>
                <% }) %>
            </select>
        </div>

        <div class="grid grid-cols-6 gap-3 mb-7 items-center">
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" step="0.01" required class="border rounded-lg col-span-2">
            
            <label for="numberInStock" class="col-span-2 text-right">Number in Stock:</label>
            <input type="number" id="numberInStock" name="numberInStock" required class="border rounded-lg">
        </div>
        
        <div class="grid grid-cols-4 gap-4">
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" class="border rounded-lg col-span-3 mb-3">
            
            <label for="itemURL">Image:</label>
            <input type="file" id="itemURL" name="image" accept="image/*" class="border rounded-lg col-span-3 mb-3">
        </div>
        
        <div class="flex justify-center">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-xl">
                Create Item
            </button>
        </div>
    </form>
</div>
<%- include('footer') %>