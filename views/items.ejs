<% if (items.length === 0) { %>
    <div class="text-center h-96 flex flex-col justify-center">
        <p class="h-80">No items available.</p>
    </div>
<% } else { %>
    <div class="min-h-80">
        <ul class="grid lg:grid-cols-5 md:grid-cols-4 sm:grid-cols-3 grid-cols-2 gap-2">
            <% items.forEach(item => { %>
                <li class="border rounded-lg p-4 flex flex-col justify-between">
                    <a href="/items/<%= item._id %>" class="flex flex-col items-center">
                        <img src="<%= item.url || 'https://www.svgrepo.com/show/508699/landscape-placeholder.svg' %>" alt="<%= item.name %>" class="w-32 h-32 object-cover mb-4">
                        <div class="flex justify-between">
                            <h5 class="text-lg font-bold"><%= item.name %></h5>
                            <div class="flex justify-end gap-4 items-center">
                                <a href="/items/<%= item._id %>/edit" class="text-blue-500 hover:text-blue-700">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <h5 onclick="confirmDelete('/items/<%= item._id %>')" class="text-red-500 cursor-pointer hover:text-red-700">
                                    <i class="bi bi-trash3-fill"></i>
                                </h5>
                            </div>
                        </div>
                        <h5 class="text-center text-gray-700"><%= item.price %></h5>
                        <h5 class="text-center text-gray-700 truncate ... w-full"><%= item.description %></h5>
                        <h5 class="text-center text-gray-700">Stock: <%= item.numberInStock %></h5>
                    </a>
                </li>
            <% }) %>
        </ul>
    </div>
<% } %>