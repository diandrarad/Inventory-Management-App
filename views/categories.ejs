<!-- categories.ejs -->
<%- include('header') %>
<h1 class="text-xl mb-3">Categories</h1>
<% if (categories.length === 0) { %>
  <div class="text-center h-96 flex flex-col justify-center">
      <p class="h-80">No categories available.</p>
  </div>
<% } else { %>
  <div class="min-h-80">
    <ul class="grid grid-cols-1 grid-cols-2 lg:grid-cols-3 gap-6">
      <% categories.forEach(category => { %>
        <li class="bg-white shadow-md rounded-lg overflow-hidden">
          <a href="items/category/<%= category._id %>">
            <img class="w-full h-40 object-cover object-center" src="<%= category.url || 'https://www.svgrepo.com/show/508699/landscape-placeholder.svg' %>" alt="<%= category.name %>">
          </a>
            <div class="p-4 flex justify-between items-center">
                <a href="items/category/<%= category._id %>" class="text-lg font-semibold text-gray-800"><%= category.name %></a>
                <div class="flex justify-between gap-4">
                  <a href="/categories/<%= category.id %>/edit" class="text-blue-500 hover:text-blue-700">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                  <h5 class="text-red-500 cursor-pointer" onclick="confirmDelete('/categories/<%= category._id %>')" role="button">
                    <i class="bi bi-trash3-fill"></i>
                  </h5>
                </div>
            </div>
        </li>
      <% }) %>
    </ul>    
  </div>
<% } %>
<%- include('footer') %>